# ~/.twmrc - barebones host, Win2K colours, auto-place, close button

Menu "Root" {}

# Disable root-click (each on its own line)
Button1 = None
Button2 = None
Button3 = None

# Win2K colour scheme
BorderWidth 2
BorderColor "#808080"
RootBackground "Blue"
TitleFont "-*-helvetica-bold-r-*-*-12-*-*-*-*-*-*-*"
#TitleBackground "#0A246A"
#TitleForeground "#FFFFFF"
TitleShadowColor "#000000"

# Close button configuration
#TitleButtons 3
#TitleButton 1 0 2 25 18 "X" Kill
#TitleButton 2 30 2 25 18 "I" Iconify
#TitleButton 3 60 2 25 18 "N" Nop
RightTitleButton "Fold" = f.delete
RightTitleButton "Fold" = f.delete
LeftTitleButton "boxes" = f.move
NoTitleFocus
NoDefaults

UseThreeDBorders
UseThreeDTitles


# Auto-placement directives
PPosition
XPPosition
RandomPlacement
DontOverlap

# Titlebar actions:
# Button1: raise window and initiate move.
# Button2: raise window and initiate resize.
# Button3: simply raise the window.
Button1 = Title raise move
Button2 = Title raise resize
Button3 = Title raise

# Client (window) area actions: raise the window on a click.
Button1 = Window raise
Button2 = Window raise
Button3 = Window raise

# Enable click-to-focus (if supported by your build)
ClickToFocus

MoveDelta 3
Function "move-or-lower" { f.move f.deltastop f.lower }
Function "move-or-raise" { f.move f.deltastop f.raise }
Function "move-or-iconify" { f.move f.deltastop f.iconify }
Button1 =	: title		: f.function "move-or-raise"
Button2 =	: title		: f.raiselower
Button1 = m     : title		: f.movetitlebar
DefaultBackground     "Black"
DefaultForeground     "White"
TitleBackground       "gray65"
MapWindowBackground   "gray65"	
MapWindowForeground   "Black"		
TitleButtonShadowDepth    1
TitleShadowDepth          1
TitleButtonBorderWidth    0
TitlePadding              2		# frame around TBobjects?
ButtonIndent              0		# indentated TBbuttons?		
FramePadding		  2		# frame around TB?
TitleJustification        "left"	# right/left/center
Borderwidth               2
BorderShadowDepth         4
Button1 =	: frame		: f.resize
Button1 = m	: frame		: f.move
Button2 =	: frame		: f.raiselower
TitleFont	"-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
ResizeFont	"-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
MenuFont	"-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
IconFont	"-adobe-helvetica-bold-r-normal--*-100-*-*-*-*-*-*"
IconManagerFont	"-adobe-helvetica-bold-r-normal--*-100-*-*-*"
